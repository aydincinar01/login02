<div>
    <label for="title">Title</label>
    <input type="text" name="title" placeholder="Book title" value="<%=book.title%>">
</div>
<div>
    <label for="author">Author</label>
    <select name="author">
        <% authors.forEach(author=> {
            if(author.id === book.author) {%>
            <option selected label="<%=author.name%>" value="<%=author.id%>"></option>
            <%}else{%>
                <option label="<%=author.name%>" value="<%=author.id%>"></option>
                <%}}) %>
    </select>
</div>
<div>
    <label for="date">Publish Date</label>
    <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' :
book.publishDate.toISOString().split('T')[0] %>" placeholder="mm/bb/yyyy">
</div>
<div>
    <label for="pageCount">Page Count</label>
    <input type="number" name="pageCount" value="<%= book.pageCount %>" placeholder="Page Count">
</div>
<div>
    <label for="cover">Cover</label>
    <input type="file" name="cover" >
</div>
<div>
    <label for="description">Description</label>
    <textarea name="description" cols="30" rows="10"><%= book.description %></textarea>
</div>



